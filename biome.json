{
    "$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "defaultBranch": "main",
        "useIgnoreFile": true
    },
    "files": {
        "ignore": ["package.json"]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "linter": {
        "rules": {
            "recommended": true,
            "complexity": {
                "noForEach": "off",
                "noStaticOnlyClass": "off"
            },
            "correctness": {
                "noSwitchDeclarations": "off",
                "noUnusedImports": "error"
            },
            "style": {
                "noParameterAssign": "off",
                "useNodeAssertStrict": "error"
            },
            "nursery": {
                "noDuplicateJsonKeys": "error"
            }
        }
    },
    "organizeImports": {
        "enabled": true
    }
}
